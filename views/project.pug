extends layout

block content
	script.
		$(".navbar li").removeClass("active");
		function success(){}
		function Join(itemid){
			$.ajax({
				  type: "POST",
				  url: "/joinproject",
				  data: {itemid:itemid},
				  success: success,
				  dataType: "json"
				});
		}

	.container.primary-container
		h1= title
		small= description
		hr

		.container
			.row
				.col-md-6.col-sm-12
					h2 Details
					table.invisitable
						tr
							td.bold-cell Creator
							td= userinfo.username
						tr
							td.bold-cell Creator Email
							td= userinfo.email
						tr
							td.bold-cell Experience Level
							td= experience
						tr
							td.bold-cell URL
							td
								a(href=url, target='_blank')= url
						tr
							td.bold-cell Location
							td= location

			.row
				button.btn.btn-primary.regular-button(style="margin-top: 50px;", onclick="Join(\"" + _id + "\")") Join


